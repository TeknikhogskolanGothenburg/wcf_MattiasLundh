@model CarServiceClient.CarRentalService.Car[]
@{
    ViewBag.Title = "Cars";
}

<table class="table table-striped">
    <thead>
        @if (Model.Length > 0)
        {
            <tr>
                <th scope="col">Id</th>
                <th scope="col">RegNumber</th>
                <th scope="col">Brand</th>
                <th scope="col">Model</th>
                <th scope="col">Year</th>
                <th scope="col">On premise</th>
            </tr>
        }
    </thead>
    <tbody>
        <p>@ViewBag.Message</p>
        @foreach (var car in Model)
        {
            string onPremise = car.Avaliable ? "yes" : " no";
            <tr>
                <th scope="row">@car.ID</th>
                <td>@car.RegistrationNumber</td>
                <td>@car.Brand</td>
                <td>@car.Model</td>
                <td>@car.Year</td>
                <td>@onPremise</td>

                <td><button class="btnCheckoutCar" value="@car.ID">Checkout</button></td>
                <td><button class="btnCheckinCar" value="@car.ID">Checkin</button></td>
                <td><button class="btnDeleteCar" value="@car.ID">X</button>Delete</td>
            </tr>
        }

    </tbody>
</table>